{
  "name": "credential",
  "plural": "credentials",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "role": {
      "type": "string",
      "required": false,
      "default": "member"
    },
    "bloodGroup": {
      "type": "string",
      "required": true
    },
    "contactNo": {
      "type": "number",
      "required": true,
      "description": "Contact number to be saved on file",
      "min": 10,
      "max": 10
    },
    "areaCode": {
      "type": "number",
      "required": true,
      "description": "Area code of the contact number provided",
      "min": 2,
      "max": 2
    },
    "firstName": {
      "type": "string",
      "required": true,
      "max": 15
    },
    "middleName": {
      "type": "string",
      "required": false,
      "max": 15
    },
    "lastName": {
      "type": "string",
      "required": true,
      "max": 15
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    { "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW", 
      "property": "find"
     }, 
     { 
       "principalType": "ROLE", 
       "principalId": "$everyone", 
       "permission": "ALLOW", 
       "property": "findById" 
      }
    ],
  "methods": {}
}
